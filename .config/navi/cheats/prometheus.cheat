% prometheus

# Getting all series in the TSDB
echo "{__name__!=""}"

# Getting all metric names
echo "group by(__name__) ({__name__!=""})"

# Getting all values for a specific label
echo "group by(<MY_LABEL>) ({__name__!=""})"

# Total number of pod restarts
echo "kube_pod_container_status_restarts_total{namespace="<NAMESPACE>", container=~"<CONTAINERS>"} != 0"
