#!/usr/bin/env bash

if [ "$(uname -s)" == "Darwin" ]; then
  # homebrew core packages bin `brew --prefix`
  if [ "$(uname -m)" == "arm64" ]; then
    # apple silicon
    export PATH=/opt/homebrew/bin:$PATH
  else
    # intel
    export PATH=/usr/local/bin:$PATH
  fi
fi

export PATH=$HOME/.local/bin:$PATH
export GOPATH="${HOME}/go"
